<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include ('../partials/head.ejs') %>
</head>
<body>
  <!-- -------------- Banner & Nav --------------- -->

  <%- include ('../partials/hero.ejs') %>
  <%- include ('../partials/nav.ejs') %>


<!-- ------------------ Main -------------------- -->

  <div class="card newForm">
    <div class="card">
      <div class="card-header text-center">
        <h3>New User</h3>
      </div>
      <div class="card-body">
        <form action="/users" method="POST" class="form-inline">
          <div class='form-group'>

            <label>User Name:</label>
            <input type="text" name="username" required class="form-control"/>

          </div>
          <div class='form-group'>

            <label>Password:</label>
            <input type="password" name="password" required class="form-control"/>

          </div>
          <div class='form-group'>

            <label>Profile Picture:</label>
            <input type="text" name='profilePicture' class="form-control"/>
          </div><br/>
          <div class='form-check'>

            <div class='text-center'>
              <label>Interests:</label><br/><br/>
            </div>

            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Creativity:</label>
              <input type='checkbox' name='creativity' class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>

            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Lifestyle:</label>
              <input type='checkbox' name='lifestyle' class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>

            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Nature:</label>
              <input type='checkbox' name='nature' class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>

            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Adventure:</label>
              <input type='checkbox' name='adventure' class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>

            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Travel:</label>
              <input type='checkbox' name='travel' class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>

          </div>

          <br><br/><br/>
          <input type="submit" value="Submit" class="btn btn-outline-dark">
        </form>

      </div>

    </div>

  </div>
</body>
</html>
