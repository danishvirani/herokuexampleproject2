<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>

    <%- include ('../partials/head.ejs') %>

  </head>
  <body>
    <!-- -------------- Banner & Nav --------------- -->

    <%- include ('../partials/hero.ejs') %>
    <%- include ('../partials/nav.ejs') %>


    <!-- ------------------ Main -------------------- -->

    <div class="container">
      <% for(let i = 0; i < posts.length; i++){ %>
          <div class='card text-center col-md-3 mb-4'>
            <div class='card-header'>
              <a href="/main/<%=posts[i]._id%>">
                <%=posts[i].title%>
              </a>
            </div>
            <div class='card-body'>
              <img src="<%=posts[i].picture%>" alt="<%=posts[i].title%>" width='150em' height='150em'>


              <b>Author:</b> <%=posts[i].author%> <br/>
              <b>Description:</b> <%=posts[i].description%><br/>

              </div>

              <div class='card-footer'>
              <b>Tags:</b>
                <p>
                  <% if (posts[i].creativity === true) { %>
                    <a href="#" class="badge badge-pill bg-secondary hover-tag">Creativity</a>
                  <% } %>
                  <% if (posts[i].lifestyle === true) { %>
                    <a href="#" class="badge badge-pill bg-secondary hover-tag">Lifestyle</a>
                  <% } %>
                  <% if (posts[i].nature === true) { %>
                    <a href="#" class="badge badge-pill bg-secondary hover-tag">Nature</a>
                  <% } %>
                  <% if (posts[i].adventure === true) { %>
                    <a href="#" class="badge badge-pill bg-secondary hover-tag">Adventure</a>
                  <% } %>
                  <% if (posts[i].travel === true) { %>
                    <a href="#" class="badge badge-pill bg-secondary hover-tag">Travel</a>
                  <% } %>

                </p>
              </div>
          </div>
      <% } %>
    </div>

  </body>
</html>
